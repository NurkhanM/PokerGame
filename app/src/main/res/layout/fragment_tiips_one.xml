<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_backgrounds">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backStack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poker Tips"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="400dp"
                android:layout_height="200dp"
                app:cardCornerRadius="32dp">

                <ImageView
                    android:id="@+id/imageMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_bg_tips_1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Have fun playing poker"
                android:textColor="@color/greenText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/text_1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/text_1_1"
                android:textColor="@color/white2"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Don't play too many hands"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Don't bluff too much"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Think about your opponent's cards"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Play against players worse than you"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Think about your position"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Pay attention to the game"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Don't jump in at the high limits"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Don't pay too much for draws"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain10"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Suited cards aren't that great"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextMain11"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/black3"
                android:fontFamily="@font/inter_bold"
                android:gravity="center|start"
                android:text="Know the rules"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="end"
                app:iconSize="12dp"
                app:iconTint="@null" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>